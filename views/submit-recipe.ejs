<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Submit Your Recipe</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">
      Share your amazing recipes with thousands of web developers across the
      world. Fill our form to get started.
    </p>
  </div>
</div>

<% if(infoSubmitObj != '') {%>
<div class="col-8 m-auto mb-4 alert alert-success" role="alert">
  <%= infoSubmitObj %>
</div>

<% } %> <% if(infoErrorsObj != '') {%>
<!-- Updated variable name -->
<div class="col-8 m-auto mb-4 alert alert-danger" role="alert">
  <!-- Changed alert class to danger -->
  <%= infoErrorsObj[0].message %>
</div>
<% } %>

<div class="row justify-content-center">
  <div class="col-8">
    <form action="/submit-recipe" method="post" enctype="multipart/form-data">
      <div class="row g-3">
        <div class="col-12 mb-1">
          <label for="email" class="form-label mb-1">Email</label>
          <input
            type="text"
            name="email"
            id="email"
            class="form-control mb-1"
            required
          />
        </div>

        <div class="col-12 mb-1">
          <label for="name" class="form-label mb-2">Recipe Name</label>
          <input
            type="text"
            name="name"
            id="name"
            class="form-control mb-1"
            required
          />
        </div>

        <div class="col-12 mb-1">
          <label for="description" class="mb-1">Description</label>
          <textarea
            name="description"
            id="description"
            cols="30"
            rows="4"
            class="form-control mb-1"
            required
          ></textarea>
        </div>

        <div class="col-12 mb-1">
          <label for="ingredients" class="form-label mb-1">Ingredients</label
          ><br />
          <small>Example: Ice</small>
          <div class="ingredientList">
            <div class="ingredientDiv mb-1">
              <input
                type="text"
                name="ingredients"
                id="ingredients"
                class="form-control mb-1"
                required
              />
            </div>
          </div>
        </div>

        <div class="col-12 mb-1">
          <button
            type="button"
            class="btn btn-outline-primary"
            id="addIngredientsBtn"
          >
            + Ingredients
          </button>
        </div>

        <div class="col-12 mb-1">
          <label for="category" class="form-label mb-1">Select Category</label>
          <select
            name="category"
            id="category"
            class="form-select form-control mb-1"
            aria-label="Category"
            required
          >
            <option selected>Select Category</option>
            <option value="Thai">Thai</option>
            <option value="American">American</option>
            <option value="Chinese">Chinese</option>
            <option value="Mexican">Mexican</option>
            <option value="Indian">Indian</option>
          </select>
        </div>

        <div class="col-12 mb-1">
          <label for="image" class="form-label mb-1">Product Image</label>
          <input
            type="file"
            class="form-control mb-1"
            name="image"
            accept="image/*"
          />
        </div>

        <div class="col-12 mb-1">
          <button type="submit" class="btn btn-primary">Submit Recipe</button>
        </div>
      </div>
    </form>
  </div>
</div>
